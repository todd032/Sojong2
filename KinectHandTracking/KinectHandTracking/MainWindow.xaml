		<Viewbox>
            <Grid Width="1920" Height="1080">
                <Image Name="camera" />
                <Canvas Name="canvas" />
            </Grid>
        </Viewbox>
		<TextBox Height="200" Width="400" x:Name="TestBox" Margin="792,569,0,0" RenderTransformOrigin="-1.125,0.811"/>
